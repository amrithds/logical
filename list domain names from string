function test($lines){
    $line = strtok($lines, PHP_EOL);

    $findAndReplace = ['www.','ww2.','web.'];
    $output = '';
    while ($line !== false)
    {

        preg_match_all('#\bhttps?://[^,\s()<>]+(?:\([\w\d]+\)|([^,[:punct:]\s]|/))#', $line, $urls);

        if(!empty($urls[0])){
            foreach ($urls[0] as $url){

                $domain = parse_url($url);


                if($output != ''){
                    $output .= ';';
                }
                $output .= str_replace($findAndReplace,'',$domain['host']);

            }
        }
        $line = strtok(PHP_EOL);
    }
    return $output;
}
echo test($lines);die;
